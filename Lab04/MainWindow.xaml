<Window x:Class="Lab04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="btnListarProductos" Content="Listar Productos" Width="150" Margin="5" Click="btnListarProductos_Click"/>
            <DataGrid x:Name="dgProductos" AutoGenerateColumns="True" Height="150"/>

            <Button Name="btnListarCategorias" Content="Listar Categorías" Width="150" Margin="5" Click="btnListarCategorias_Click"/>
            <DataGrid x:Name="dgCategorias" AutoGenerateColumns="True" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
